{
  "scripts": {
    "build:home": "esbuild js/home.js --bundle  --minify --sourcemap --outfile=static/js/home.js",
    "build:doc": "esbuild js/doc.js --bundle  --minify --sourcemap --format=esm --outfile=static/js/doc.js",
    "build:copy:css": "cp node_modules/prismjs/themes/prism.min.css static/css/prism.css && cp node_modules/prismjs/themes/prism-okaidia.min.css static/css/prism-okaidia.css",
    "build": "pnpm build:copy:css && pnpm build:home && pnpm build:doc"
  },
  "devDependencies": {
    "esbuild": "^0.19.10",
    "esbuild-plugin-prismjs": "^1.0.8",
    "shikiji": "^0.9.9"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.15.1",
    "clipboard": "2.0.6",
    "date-fns": "^3.0.0",
    "dompurify": "2.2.2",
    "eventemitter3": "4.0.7",
    "halfmoon": "^1.1.1",
    "htm": "3",
    "marked": "1.2.4",
    "prismjs": "^1.29.0",
    "react": "16",
    "react-dom": "16",
    "react-table": "7",
    "slugify": "1.4.6"
  }
}
