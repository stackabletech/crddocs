    "clipboard": "2.0.6",
    "date-fns": "^3.0.6",
    "dompurify": "2.2.2",
    "eventemitter3": "5.0.1",
    "halfmoon": "^1.1.1",
    "htm": "3",
    "marked": "1.2.4",
    "prismjs": "^1.29.0",
    "react": "16",
    "react-dom": "16",
    "react-table": "7",
    "slugify": "1.6.6"
  }
}